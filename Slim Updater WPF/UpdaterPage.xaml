<Page x:Class="SlimUpdater.UpdaterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:Controls="clr-namespace:SlimUpdater.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="435" d:DesignWidth="800"
      Title="Updates">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>
        <ListView></ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="50" Grid.Row="1">
            <Button Height="21" Width="60" Margin="0 0 20 0">Refresh</Button>
            <Button Height="21" Width="100">Install Selected</Button>
        </StackPanel>
    </Grid>
</Page>
