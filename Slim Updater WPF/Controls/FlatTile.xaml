<UserControl x:Class="SlimUpdater.Controls.FlatTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlimUpdater"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300" MouseEnter="FlatTile_MouseEnter"
             MouseLeave="FlatTile_MouseLeave">
    <DockPanel Width="300" Height="150">
        <Image x:Name="icon" DockPanel.Dock="Top" Margin="15" Source="/Icons/updater_icon.png"
               Width="64" Height="64"></Image>
        <Label x:Name="title" DockPanel.Dock="Bottom" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
               FontWeight="Bold" Content="Title" SizeChanged="Title_SizeChanged"/>
    </DockPanel>
</UserControl>
