<Page x:Class="SlimUpdater.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlimUpdater"
      mc:Ignorable="d" 
      d:DesignHeight="435" d:DesignWidth="800"
      Title="Credits">
    <StackPanel Background="#00ba00">
        <Label DockPanel.Dock="Top" Foreground="White" FontWeight="Bold" 
               FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,20">
            The following applications and libraries are used by Slim Updater:
        </Label>

        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250px"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100px"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
    </StackPanel>

</Page>
