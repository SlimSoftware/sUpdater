<Page x:Class="SlimUpdater.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlimUpdater"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Log">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="32px"/>
        </Grid.RowDefinitions>

        <RichTextBox x:Name="textBox" Grid.Row="0" IsReadOnly="True">
            <RichTextBox.Resources>
                <!-- Remove the margin between the lines -->
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Button x:Name="clearButton"  Height="21px" Width="45px" Content="Clear" Click="ClearButton_Click"/>
            <Button x:Name="saveButton" Height="21px" Width="80px" Margin="20 0 0 0" Content="Save to File" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
