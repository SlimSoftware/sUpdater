<Page x:Class="sUpdater.LicensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sUpdater"
      mc:Ignorable="d" 
      d:DesignHeight="435" d:DesignWidth="800">
    <RichTextBox x:Name="licenseTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                 Foreground="White" Background="#00ba00">
        <RichTextBox.Resources>
            <!-- Remove the margin between the lines -->
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="Margin" Value="0" />
            </Style>
        </RichTextBox.Resources>
    </RichTextBox>
</Page>
